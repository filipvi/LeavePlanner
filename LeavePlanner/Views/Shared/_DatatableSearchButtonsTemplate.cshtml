@*Laptop*@
<div class="row d-none d-md-block d-lg-none d-md-block d-lg-none d-lg-block d-xl-none d-xl-block">
    <div class="d-flex mt-5">
        <button type="button" class="btn btn-secondary waves-effect waves-themed mr-2 ml-auto js-resetCriteria">
            <span class="far fa-arrow-left mr-1"></span> Reset all
        </button>
        <button type="button" class="btn btn-success bg-success-gradient waves-effect waves-themed js-performSearch mr-2">
            <span class="far fa-file-search mr-1"></span> Search
        </button>
    </div>
</div>


@*Tablet*@
<div class="d-none d-sm-block d-md-none">
    <div class="row mt-3">
        <div class="col-6">
            <button type="button" class="btn btn-secondary btn-block waves-effect waves-themed mr-2 js-resetCriteria">
                <span class="far fa-arrow-left mr-1"></span> Reset all
            </button>
        </div>
        <div class="col-6">
            <button type="button" class="btn btn-success bg-success-gradient btn-block bg-success-gradient waves-effect waves-themed js-performSearch">
                <span class="far fa-file-search mr-1"></span> Search
            </button>
        </div>
    </div>
</div>

@*Mobile*@
<div class="row d-block d-sm-none">
    <div class="col-lg-12">
        <div class="frame-wrap mt-3">
            <button type="button" class="btn btn-secondary btn-block waves-effect waves-themed mr-2 js-resetCriteria">
                <span class="far fa-arrow-left mr-1"></span> Reset all
            </button>
            <button type="button" class="btn btn-success bg-success-gradient btn-block bg-success-gradient waves-effect waves-themed js-performSearch">
                <span class="far fa-file-search mr-1"></span> Search
            </button>
        </div>
    </div>
</div>