@model LeavePlanner.Models.ViewModels.Employee.EditEmployeeViewModel

@*Laptop*@
<div class="row d-none d-md-block d-lg-none d-md-block d-lg-none d-lg-block d-xl-none d-xl-block">
    <div class="d-flex mt-3">
        <a asp-controller="Employee" asp-action="Details" asp-route-id="@Model.Id"
           class="btn btn-secondary waves-effect waves-themed mr-2 ml-auto">
            <span class="far fa-arrow-left mr-1"></span> Employee details
        </a>
        <button type="submit" class="btn btn-success waves-effect waves-themed mr-2">
            <span class="far fa-save mr-1"></span> Save
        </button>
    </div>
</div>

@*Tablet*@
<div class="d-none d-sm-block d-md-none">
    <div class="row my-3 mx-2">
        <a asp-controller="Employee" asp-action="Details" asp-route-id="@Model.Id"
           class="btn btn-secondary btn-block waves-effect waves-themed mr-2 ml-auto">
            <span class="far fa-arrow-left mr-1"></span> Employee details
        </a>
        <button type="submit" class="btn btn-success btn-block waves-effect waves-themed mr-2">
            <span class="far fa-save mr-1"></span> Save
        </button>
    </div>
</div>


@*Mobile*@
<div class="row d-block d-sm-none">
    <div class="col-lg-12">
        <div class="frame-wrap mt-3">
            <a asp-controller="Employee" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-secondary btn-block waves-effect waves-themed mr-2 ml-auto">
                <span class="far fa-arrow-left mr-1"></span> Employee details
            </a>
            <button type="submit" class="btn btn-success btn-block waves-effect waves-themed mr-2">
                <span class="far fa-save mr-1"></span> Save
            </button>
        </div>
    </div>
</div>