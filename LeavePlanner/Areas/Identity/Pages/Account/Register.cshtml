@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>


<div class="col-xl-6 ml-auto mr-auto">
    <div class="card p-4 rounded-plus bg-faded">
        @*<div class="alert alert-primary text-dark" role="alert">
                <strong>Heads Up!</strong> Due to server maintenance from 9:30GTA to 12GTA, the verification emails could be delayed by up to 10 minutes.
            </div>*@
        <form id="js-login" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="alert alert-primary text-danger"></div>
            <div class="form-group row">
                <label class="col-xl-12 form-label">Vaše ime i prezime</label>
                <div class="col-6 pr-1">
                    <input type="text" asp-for="Input.FirstName" class="form-control" placeholder="Ime" required="required" />
                    <span class="invalid-feedback" asp-validation-for="Input.FirstName">Obavezno polje</span>
                </div>
                <div class="col-6 pl-1">
                    <input type="text" asp-for="Input.LastName" class="form-control" placeholder="Prezime" required="required" />
                    <span class="invalid-feedback" asp-validation-for="Input.LastName">Obavezno polje</span>
                </div>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Input.Email">Email adresa <span class="text-muted small">je potrebna za prijavu i oporavak korisničkog računa</span></label>
                <input type="email" asp-for="Input.Email" class="form-control" placeholder="Email adresa" required="required" />
                <span class="invalid-feedback" asp-validation-for="Input.Email">Obavezno polje</span>
                <div class="help-block">Email adresa će biti vaše korisničko ime</div>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Input.Password">Lozinka</label>
                <input type="password" asp-for="Input.Password" class="form-control" placeholder="Lozinka (minimalno 6 znakova)" required="required" />
                <span class="invalid-feedback" asp-validation-for="Input.Password">Obavezno polje</span>
                <div class="help-block">Vaša lozinka mora biti duga 6-20 znakova, mora sadržavati slova i brojeve, te ne smije sadržavati razmake i specijalne znakove.</div>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Input.ConfirmPassword">Ponovljena lozinka</label>
                <input type="password" asp-for="Input.ConfirmPassword" class="form-control" placeholder="Lozinka (minimalno 6 znakova)" required="required" />
                <span class="invalid-feedback" asp-validation-for="Input.ConfirmPassword">Obavezno polje</span>
            </div>
            @*<div class="form-group demo">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" asp-for="Input.AgreeToTerms" />
                        <label class="custom-control-label" asp-for="Input.AgreeToTerms">Slažem se sa uvjetima i odredbama</label>
                        <span class="invalid-feedback" asp-validation-for="Input.AgreeToTerms">Potrebno potvrditi prije nastavka</span>
                    </div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" asp-for="Input.SignUp" />
                        <label class="custom-control-label" asp-for="Input.SignUp">Prijavite se za Newsletter</label>
                    </div>
                </div>*@
            <div class="row no-gutters justify-content-center">
                <div class="col-12 fw-700 text-right">
                    <button id="js-login-btn" type="submit" class="btn btn-danger waves-effect waves-themed "><span class="fal fa-user mr-2"></span>Registracija</button>
                </div>
            </div>
        </form>
    </div>
</div>

