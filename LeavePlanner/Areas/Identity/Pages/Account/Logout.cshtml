@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}


<div class="row">
    <div class="col-xl-4 col-md-6 col-sm-12 m-auto p-4">
        <div class="card p-4 rounded-plus bg-faded text-center">
            <div class="col-12 mb-g fs-xxl text-success text-center">
                <h2 class="fw-900">
                    Logout successful
                </h2>
                <span class="far fa-check fa-2x text-success"></span>
            </div>
            <hr class="dividerHr w-75 mr-auto ml-auto"/>
            <div class="row p-3">
                <div class="col-12 mb-3">
                    <a asp-controller="Home" asp-action="LandPage" class="btn btn-secondary btn-block btn-sm waves-effect waves-themed">
                        <i class="fa fa-home mr-2"></i>
                        Home page
                    </a>
                </div>
                <div class="col-6">
                    <a asp-area="Identity" asp-page="/account/login" class="btn btn-success btn-block btn-sm waves-effect waves-themed">
                        <i class="fa fa-sign-in-alt mr-2"></i>
                        Login
                    </a>
                </div>
                <div class="col-6">
                    <a asp-area="Identity" asp-page="/account/register" class="btn btn-danger btn-block btn-sm waves-effect waves-themed">
                        <i class="fa fa-user-plus mr-2"></i>
                        Register
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>


